{
    "manifest_version": 2,
    "name": "speech",
    "version": "1",
    "web_accessible_resources": [
        "config.txt"
    ],

    "background":{
        "scripts": ["p5/p5.js", "p5/p5.speech.js", "background.js"]
    },

    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_title": "Speech"
    },

    "content_scripts": [
        {
          "matches": ["https://web.whatsapp.com/"],
          "js": ["whatsapp.js"]
        }
    ],

    "permissions": [
        "activeTab"
    ]
}
